{
  "name": "recap-chrome",
  "version": "1.2.29",
  "description": "RECAP improves the experience of using PACER, the online public acces system for the U.S. federal courts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest",
    "postinstall": "vendor-copy",
    "start": "parcel src/manifest.json --host localhost --port 1234 --target webext-dev --config @parcel/config-webextension",
    "build": "parcel build src/manifest.json --target webext-prod --config @parcel/config-webextension"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freelawproject/recap-chrome.git"
  },
  "author": "Free Law Project and the Center for Information Technology and Policy at Princeton",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/freelawproject/recap-chrome/issues"
  },
  "homepage": "https://github.com/freelawproject/recap-chrome#readme",
  "dependencies": {
    "@types/lodash": "^4.14.178",
    "bootstrap": "^4.6.1",
    "file-saver": "^2.0.5",
    "jquery": "^3.6.0",
    "kuende-livestamp": "^1.1.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "parcel": "^2.4.1"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.1",
    "@parcel/transformer-typescript-tsc": "^2.0.1",
    "@types/chrome": "0.0.174",
    "@types/jest": "^27.4.0",
    "bootstrap": "^5.1.3",
    "entr": "^0.0.0",
    "eslint": "^8.4.0",
    "file-saver": "2.0.5",
    "jasmine": "^3.10.0",
    "jest": "^27.4.7",
    "jest-chrome": "^0.7.2",
    "jquery": "~3.6.0",
    "karma": "^6.3.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.2.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "^4.0.2",
    "karma-jasmine-ajax": "^0.1.13",
    "karma-jquery": "^0.2.4",
    "karma-parcel": "^0.5.2",
    "moment": "~2.29.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "vendor-copy": "^3.0.1",
    "web-ext": "^6.8.0",
    "whatwg-fetch": "^3.6.2"
  },
  "vendorCopy": [
    {
      "from": "node_modules/jquery/dist/jquery.js",
      "to": "src/assets/js/jquery.js"
    },
    {
      "from": "node_modules/file-saver/src/FileSaver.js",
      "to": "src/assets/js/FileSaver.js"
    },
    {
      "from": "node_modules/moment/moment.js",
      "to": "src/assets/js/moment.js"
    }
  ]
}